
class Line {

  Vec3D start;
  Vec3D end;
  //---------------------------------------------------------------------------------------------------

  Line(Vec3D _start, Vec3D _end) {
    start = _start;
    end = _end;
  }

  //---------------------------------------------------------------------------------------------------
  void run() {
    display();
  }

  //---------------------------------------------------------------------------------------------------
  void display() {
    stroke(255,100);
    strokeWeight(1);
    line(start.x, start.y, start.z, end.x, end.y, end.z);
  }

  //---------------------------------------------------------------------------------------------------
}

