
class Point {

  Vec3D loc;
  
  float colR, colG, colB;
  float radius;

  //---------------------------------------------------------------------------------------------------

  Point(Vec3D _loc) {
    loc = _loc;
    
    colR = random(0,100);
    colG = random(0, 200);
    colB = random(150, 255);
    
    radius = random(1,3);
  }

  //---------------------------------------------------------------------------------------------------
  void run() {
    display();
  }

  //---------------------------------------------------------------------------------------------------
  void display() {
    stroke(colR, colG, colB);
    strokeWeight(radius);
    point(loc.x, loc.y, loc.z);
  }

  //---------------------------------------------------------------------------------------------------
}

